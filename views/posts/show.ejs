<%- include("../partials/navbar.ejs") %> <!-- 네비게이션 바 포함 -->

<div class="container" id="post-detail">
    <!-- 게시글 상세 내용이 JavaScript에서 동적으로 채워짐 -->

    <h1><%= post.title %></h1>

    <p><%= post.content %></p>

    <small>
        작성자: <%= post.author.username %> |
        조회수: <%= post.views %> |
        작성일: <%= new Date(post.createdAt).toLocaleDateString() %>
    </small>

    <!-- 목록으로 돌아가기 -->
    <button id="back-to-list" style="margin-top: 16px;">← 목록으로 돌아가기</button>

  </div>

<!-- 스타일 적용 -->
<link rel="stylesheet" href="/css/style.css">

<!-- AJAX 스크립트 -->
<script type="module" src="/js/postDetail.js"></script>